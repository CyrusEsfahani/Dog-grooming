{
  "name": "dog-grooming-app",
  "version": "1.0.0",
  "description": "A modern dog grooming web application",
  "main": "index.js",
  "scripts": {
    "start": "node server/src/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
